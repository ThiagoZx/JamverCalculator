        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/button22"
        android:layout_above="@+id/button6"
        android:layout_toRightOf="@+id/button"
        android:layout_alignRight="@+id/button6"
